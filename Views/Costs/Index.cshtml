@model IEnumerable<Cost>
@{
    String title = "Расходы";
    ViewBag.Title = title;
    ViewBag.IsAllUsers = false;
}

<div class="d-flex flex-row justify-content-between align-items-center mt-3">
    <div>
        <h2>@title</h2>
    </div>
    <div>
        <partial name="_AddButton" />
    </div>
</div>
<partial name="_CostsTable" model="Model" />

<partial name="_ModalWindow" model='new ModalWindow { Title = "Предупреждение", Message = "Вы действительно хотите удалить эти расходы?"}' />