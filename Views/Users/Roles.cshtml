@model ChangeRole
@{
    ViewBag.Title = "Назначить роли";
}

<div class="body-form-add">
    <div class="form-add">
        <form asp-action="Roles">
            <input type="hidden" name="userId" value="@Model.UserId" />
            <div class="mb-4">
                <h2>Изменение ролей для пользователя @Model.UserEmail</h2>
                <hr class="my-2" />
            </div>
            <div class="mb-4">
                @foreach (var role in Model.AllRoles)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="roles" value="@role.Name" id="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
                        <label class="form-check-label" for="@role.Name">@role.Name</label>
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-lg btn-success float-end btn-submit">Сохранить</button>
        </form>
    </div>
</div>
