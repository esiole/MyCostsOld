@model AddProduct
@{
    ViewBag.Title = "Редактирование продукта";
}

<form asp-action="Edit" asp-route-id="@Model.Product.Id" asp-route-category="@Model.Product.CategoryId">
    <div class="form-group">
        <label asp-for="Product.CategoryId" class="control-label">Название категории</label>
        <select asp-for="Product.CategoryId" asp-items="Model.Categories" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Product.Name" class="control-label">Название продукта</label>
        <input type="text" asp-for="Product.Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" id="submit" />
    </div>
</form>
