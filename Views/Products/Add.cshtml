@model AddProduct
@{
    String title = "Новый продукт";
    ViewBag.Title = title;
}

<div class="body-form-add">
    <div class="form-add">
        <form asp-action="Add">
            <div class="mb-4">
                <h2>@title</h2>
                <hr class="my-2" />
            </div>
            <div class="mb-4">
                <label asp-for="Product.CategoryId" class="form-label"></label>
                <select asp-for="Product.CategoryId" asp-items="Model.Categories" class="form-select form-select-lg border-dark"></select>
            </div>
            <div class="mb-4">
                <label asp-for="Product.Name" class="form-label"></label>
                <input asp-for="Product.Name" class="form-control form-control-lg border-dark" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <hr class="my-4" />
            <input type="submit" class="btn btn-lg btn-success float-end btn-submit" value="Добавить" />
        </form>
    </div>
</div>
