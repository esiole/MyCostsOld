@model Login

<div class="body-form-sign">
    <div class="form-signin text-center">
        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <h2 class="mb-3 fw-normal">
                Вход в приложение
            </h2>
            <div class="form-floating">
                <input class="form-control" asp-for="Email" type="email">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-floating">
                <input class="form-control" asp-for="Password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="checkbox mb-3">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe"></label>
            </div>
            <input class="w-100 btn btn-lg btn-primary" type="submit" value="Войти" />
            <div asp-validation-summary="ModelOnly"></div>
        </form>
    </div>
</div>
