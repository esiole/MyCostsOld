@model ProductCategory
@{
    String title = "Новая категория";
    ViewBag.Title = title;
}

<div class="body-form-add">
    <div class="form-add">
        <form asp-action="Add">
            <div class="mb-4">
                <h2>@title</h2>
                <hr class="my-2" />
            </div>
            <div class="mb-4">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control form-control-lg border-dark" />
            </div>
            <hr class="my-4" />
            <input type="submit" class="btn btn-lg btn-success float-end btn-submit" value="Добавить" />
        </form>
    </div>
</div>
